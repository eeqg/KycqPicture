<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context="com.kycq.picture.SplashActivity">
	
	<data>
		
		<import type="android.view.View"/>
		
		<variable
			name="isCrop"
			type="boolean"/>
	</data>
	
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#F5F5F5">
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			
			<GridLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@android:color/white"
				android:orientation="vertical"
				android:paddingLeft="10dp"
				android:paddingRight="10dp">
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_column="0"
					android:layout_row="0"
					android:text="输出图片数量:"
					android:textSize="18sp"/>
				
				<EditText
					android:id="@+id/editPickerCount"
					android:layout_column="1"
					android:layout_columnSpan="3"
					android:layout_gravity="fill_horizontal"
					android:layout_row="0"
					android:inputType="numberSigned"/>
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_column="0"
					android:layout_row="1"
					android:text="是否裁剪:"
					android:textSize="18sp"/>
				
				<CheckBox
					android:id="@+id/checkCrop"
					android:layout_column="1"
					android:layout_columnSpan="3"
					android:layout_row="1"/>
				
				<TextView
					android:layout_column="0"
					android:layout_row="2"
					android:text="裁剪X轴比例:"
					android:textSize="18sp"
					android:visibility="@{isCrop ? View.VISIBLE : View.GONE}"/>
				
				<EditText
					android:id="@+id/editAspectX"
					android:layout_width="0dp"
					android:layout_column="1"
					android:layout_columnWeight="1"
					android:layout_gravity="fill_horizontal"
					android:layout_row="2"
					android:inputType="numberSigned"
					android:visibility="@{isCrop ? View.VISIBLE : View.GONE}"/>
				
				<TextView
					android:layout_column="2"
					android:layout_row="2"
					android:text="裁剪Y轴比例:"
					android:textSize="18sp"
					android:visibility="@{isCrop ? View.VISIBLE : View.GONE}"/>
				
				<EditText
					android:id="@+id/editAspectY"
					android:layout_width="0dp"
					android:layout_column="3"
					android:layout_columnWeight="1"
					android:layout_gravity="fill_horizontal"
					android:layout_row="2"
					android:inputType="numberSigned"
					android:visibility="@{isCrop ? View.VISIBLE : View.GONE}"/>
				
				<TextView
					android:layout_column="0"
					android:layout_row="3"
					android:text="最大宽度:"
					android:textSize="18sp"/>
				
				<EditText
					android:id="@+id/editMaxWidth"
					android:layout_width="0dp"
					android:layout_column="1"
					android:layout_columnWeight="1"
					android:layout_gravity="fill_horizontal"
					android:layout_row="3"
					android:inputType="numberSigned"/>
				
				<TextView
					android:layout_column="2"
					android:layout_row="3"
					android:text="最大高度:"
					android:textSize="18sp"/>
				
				<EditText
					android:id="@+id/editMaxHeight"
					android:layout_width="0dp"
					android:layout_column="3"
					android:layout_columnWeight="1"
					android:layout_gravity="fill_horizontal"
					android:layout_row="3"
					android:inputType="numberSigned"/>
			
			</GridLayout>
			
			<com.kycq.library.picture.widget.PictureLayout
				android:id="@+id/pictureLayout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="10dp"
				app:picture_horizontalPadding="10dp"
				app:picture_maxCount="8"
				app:picture_pictureRatio="1"
				app:picture_pictureUpload="true"
				app:picture_pictureView="@layout/include_picture_view"
				app:picture_rowCount="4"
				app:picture_uploadBackground="@drawable/bg_dash_box"
				app:picture_uploadPicture="@mipmap/img_upload_picture"
				app:picture_verticalPadding="10dp"/>
		</LinearLayout>
	</ScrollView>

</layout>
